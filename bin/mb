#!/usr/bin/env ruby
$:.push File.expand_path("../../lib", __FILE__)
require 'motherbrain'

begin
  MotherBrain::Invoker.start
rescue MotherBrain::InvalidConfig => e
  MotherBrain.ui.say e.message, :red
  exit e.status_code
rescue MotherBrain::MBError => e
  MotherBrain.ui.say e, :red
  exit e.status_code
rescue Chozo::Errors::ChozoError => e
  MotherBrain.ui.say e, :red
  exit 1
end
