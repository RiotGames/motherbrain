#!/usr/bin/env ruby
$:.push File.expand_path("../../lib", __FILE__)
require 'motherbrain'

begin
  MB::CliGateway.start
rescue MB::InvalidConfig => e
  MB.ui.say e.message, :red
  exit e.status_code
rescue MB::MBError => e
  MB.ui.say e, :red
  exit e.status_code
rescue Chozo::Errors::ChozoError => e
  MB.ui.say e, :red
  exit 1
end
